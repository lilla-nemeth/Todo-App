{
	"compilerOptions": {
		"jsx": "react",
		"allowJs": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"types": ["node"],
		"outDir": "build"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "build/**/*"]
}
